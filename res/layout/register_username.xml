<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
     >
     <ScrollView 
         android:layout_width="fill_parent"  
         android:layout_height="fill_parent">  
         <LinearLayout 
             android:layout_width="fill_parent"  
        	 android:layout_height="fill_parent"
        	 android:orientation="vertical">
        	<ImageView 
        	     android:layout_width="320dp"
	        	 android:layout_height="130dp"
	        	 android:background="@drawable/register_logo"
	        	 android:layout_gravity="center_horizontal"
	        	 android:layout_marginTop="10dp"
        	     />
             <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="90dp"
		        android:layout_marginLeft="30dp"
		        android:layout_marginRight="30dp"
		        android:layout_marginTop="50dp"
		        android:background="#e5ffffff"
		        android:orientation="vertical"
	        	>
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="40dp"
		        	android:orientation="horizontal"
		        	android:layout_marginTop="3dp"
		        	android:layout_marginLeft="1dp"
		        	android:layout_marginRight="1dp"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="用户名"
		        		android:textSize="15dp"
		        		android:gravity="center_vertical"
		        		android:textColor="#666666"
	        	        />
	        	    <EditText 
	        	        android:id="@+id/id_register_username"
	        	         android:layout_width="0dp"
		        		 android:layout_height="match_parent"
		        		 android:layout_weight="3"
		        		 android:hint="请输入用户名"
		        		 android:digits="@string/edit_input"
		        		 android:gravity="center_vertical"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:background="@drawable/item_shape_focus_no_corner"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	        	 <ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:layout_marginTop="2dp"
		        	 android:background="#0c000000"
	        	     />
	        	<LinearLayout 
		        	android:layout_width="match_parent"
		        	android:layout_height="40dp"
		        	android:orientation="horizontal"
		        	android:layout_marginTop="3dp"
		        	android:layout_marginLeft="1dp"
		        	android:layout_marginRight="1dp"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="密   码"
		        		android:textSize="15dp"
		        		android:gravity="center_vertical"
		        		android:textColor="#666666"
	        	        />
	        	    <EditText 
	        	        android:id="@+id/id_register_password"
	        	         android:layout_width="0dp"
		        		 android:layout_height="match_parent"
		        		 android:layout_weight="3"
		        		 android:hint="请输入密码"
		        		 android:inputType="textPassword"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:background="@drawable/item_shape_focus_no_corner"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	         </LinearLayout>
	         
             <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="135dp"
		        android:layout_marginTop="15dp"
		        android:layout_marginLeft="30dp"
		        android:layout_marginRight="30dp"
		        android:orientation="vertical"
	        	>
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="0dp"
		        	android:layout_weight="1"
		        	android:orientation="horizontal"
		        	android:layout_marginTop="3dp"
		        	android:layout_marginLeft="1dp"
		        	android:layout_marginRight="1dp"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="姓	名"
		        		android:textSize="15dp"
		        		android:gravity="center_vertical"
		        		android:textColor="#666666"
	        	        />
	        	    <EditText 
	        	        android:id="@+id/id_register_realname"
	        	         android:layout_width="0dp"
		        		 android:layout_height="match_parent"
		        		 android:layout_weight="3"
		        		 android:hint="请输入真实姓名"
		        		 android:gravity="center_vertical"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:background="@drawable/item_shape_focus_no_corner"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	        	 <ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:layout_marginTop="2dp"
		        	 android:background="#0c000000"
	        	     />
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="0dp"
		        	android:layout_weight="1"
		        	android:orientation="horizontal"
		        	android:layout_marginTop="3dp"
		        	android:layout_marginLeft="1dp"
		        	android:layout_marginRight="1dp"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="身份证"
		        		android:textSize="15dp"
		        		android:gravity="center_vertical"
		        		android:textColor="#666666"
	        	        />
	        	    <EditText 
	        	        android:id="@+id/id_register_idcard"
	        	         android:layout_width="0dp"
		        		 android:layout_height="match_parent"
		        		 android:digits="@string/edit_input"
		        		 android:layout_weight="3"
		        		 android:hint="请输入二代身份证号码"
		        		 android:gravity="center_vertical"
		        		 android:maxLength="18"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:background="@drawable/item_shape_focus_no_corner"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	        	 <ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:layout_marginTop="2dp"
		        	 android:background="#0c000000"
	        	     />
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="0dp"
		        	android:layout_weight="1"
		        	android:layout_marginTop="3dp"
		        	android:layout_marginBottom="5dp"
		        	android:layout_marginLeft="1dp"
		        	android:layout_marginRight="1dp"
		        	android:orientation="horizontal"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="手机号"
		        		android:textSize="15dp"
		        		android:gravity="center_vertical"
		        		android:textColor="#666666"
	        	        />
	        	    <EditText 
	        	        android:id="@+id/id_register_phone"
	        	         android:layout_width="0dp"
		        		 android:layout_height="match_parent"
		        		 android:layout_weight="3"
		        		 android:hint="请输入11位手机号码"
		        		 android:inputType="number"
		        		 android:gravity="center_vertical"
		        		 android:maxLength="11"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:background="@drawable/item_shape_focus_no_corner"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	         </LinearLayout>
             
             <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="180dp"
		        android:layout_marginTop="15dp"
		        android:layout_marginLeft="30dp"
		        android:layout_marginRight="30dp"
		        android:orientation="vertical"
	        	>
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="0dp"
		        	android:layout_weight="1"
		        	android:orientation="horizontal"
		        	android:layout_marginTop="3dp"
		        	android:layout_marginLeft="1dp"
		        	android:layout_marginRight="1dp"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="昵 	称"
		        		android:textSize="15dp"
		        		android:gravity="center_vertical"
		        		android:textColor="#666666"
	        	        />
	        	    <EditText 
	        	        android:id="@+id/id_register_nickname"
	        	         android:layout_width="0dp"
		        		 android:layout_height="match_parent"
		        		 android:layout_weight="3"
		        		 android:hint="请输入个人昵称"
		        		 android:gravity="center_vertical"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:background="@drawable/item_shape_focus_no_corner"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	        	<ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:layout_marginTop="3dp"
		        	 android:background="#0c000000"
	        	     />
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="0dp"
		        	android:layout_weight="1"
		        	android:layout_marginTop="3dp"
		        	android:layout_marginLeft="1dp"
		        	android:layout_marginRight="1dp"
		        	android:orientation="horizontal"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="住	址"
		        		android:textSize="15dp"
		        		android:gravity="center_vertical"
		        		android:textColor="#666666"
	        	        />
	        	    <EditText 
	        	        android:id="@+id/id_register_address"
	        	         android:layout_width="0dp"
		        		 android:layout_height="match_parent"
		        		 android:layout_weight="3"
		        		 android:hint="请输入家庭住址"
		        		 android:gravity="center_vertical"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:background="@drawable/item_shape_focus_no_corner"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	        	<ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:background="#0c000000"
		        	 android:layout_marginTop="3dp"
	        	     />
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="0dp"
		        	android:layout_weight="1"
		        	android:layout_marginTop="3dp"
		        	android:layout_marginLeft="1dp"
		        	android:layout_marginRight="1dp"
		        	android:orientation="horizontal"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="职	业"
		        		android:textSize="15dp"
		        		android:gravity="center_vertical"
		        		android:textColor="#666666"
	        	        />
	        	    <EditText 
	        	        android:id="@+id/id_register_position"
	        	         android:layout_width="0dp"
		        		 android:layout_height="match_parent"
		        		 android:layout_weight="3"
		        		 android:hint="请输入职业"
		        		 android:gravity="center_vertical"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:background="@drawable/item_shape_focus_no_corner"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	        	 <ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:background="#0c000000"
		        	 android:layout_marginTop="3dp"
	        	     />
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="0dp"
		        	android:layout_weight="1"
		        	android:orientation="horizontal"
		        	android:layout_marginTop="3dp"
		        	android:layout_marginBottom="5dp"
		        	android:layout_marginLeft="1dp"
		        	android:layout_marginRight="1dp"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="邮	箱"
		        		android:textSize="15dp"
		        		android:gravity="center_vertical"
		        		android:textColor="#666666"
	        	        />
	        	   
	        	    <EditText 
	        	        android:id="@+id/id_register_email"
	        	         android:layout_width="0dp"
		        		 android:layout_height="match_parent"
		        		 android:layout_weight="3"
		        		 android:hint="请输入邮箱地址"
		        		 android:gravity="center_vertical"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:background="@drawable/item_shape_focus_no_corner"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	        	
	         </LinearLayout>
	         
             <Button 
                 android:id="@+id/id_register_button"
                 android:layout_width="match_parent"
		         android:layout_height="45dp"
		         android:layout_marginLeft="30dp"
		         android:layout_marginRight="30dp"
		         android:layout_marginTop="30dp"
		         android:layout_marginBottom="20dp"
		         android:text="注		册"
		         android:textColor="#ffffff"
		         android:textSize="18dp"
		         android:gravity="center"
		         android:background="@drawable/button_background"
                 />
	       </LinearLayout>
	       
     </ScrollView>

    <include
        android:id="@+id/id_data_loading"
        layout="@layout/layout_loading_dialog"
       />
	       
</FrameLayout>
