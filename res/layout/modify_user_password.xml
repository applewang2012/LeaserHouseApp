<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
     >
     <ScrollView 
         android:layout_width="fill_parent"  
         android:layout_height="fill_parent">  
     	<LinearLayout 
             android:layout_width="fill_parent"  
        	 android:layout_height="fill_parent"
        	 android:orientation="vertical">
        	 <ImageView 
        	     android:layout_width="320dp"
	        	 android:layout_height="130dp"
	        	 android:layout_marginTop="10dp"
	        	 android:layout_gravity="center_horizontal"
	        	 android:background="@drawable/view_banner"
        	     />
             <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="180dp"
		        android:layout_marginLeft="30dp"
		        android:layout_marginRight="30dp"
		        android:layout_marginTop="50dp"
		        android:background="#e5ffffff"
		        android:orientation="vertical"
	        	>
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="40dp"
		        	android:orientation="horizontal"
		        	android:layout_marginTop="3dp"
		        	android:layout_marginLeft="1dp"
		        	android:layout_marginRight="1dp"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="用户名"
		        		android:textSize="15dp"
		        		android:gravity="center_vertical"
		        		android:textColor="#666666"
	        	        />
	        	    <EditText 
	        	        android:id="@+id/id_password_username"
	        	         android:layout_width="0dp"
		        		 android:layout_height="match_parent"
		        		 android:layout_weight="3"
		        		 android:hint="请输入用户名"
		        		 android:digits="@string/edit_input"
		        		 android:gravity="center_vertical"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:background="@drawable/item_shape_focus_no_corner"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	        	<ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:layout_marginTop="2dp"
		        	 android:background="#0c000000"
	        	     />
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="40dp"
		        	android:orientation="horizontal"
		        	android:layout_marginTop="3dp"
		        	android:layout_marginLeft="1dp"
		        	android:layout_marginRight="1dp"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="原密码"
		        		android:textSize="15dp"
		        		android:gravity="center_vertical"
		        		android:textColor="#666666"
	        	        />
	        	    <EditText 
	        	        android:id="@+id/id_old_password"
	        	         android:layout_width="0dp"
		        		 android:layout_height="match_parent"
		        		 android:layout_weight="3"
		        		 android:hint="请输入原密码"
		        		 android:digits="@string/edit_input"
		        		 android:gravity="center_vertical"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:background="@drawable/item_shape_focus_no_corner"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	        	<ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:layout_marginTop="2dp"
		        	 android:background="#0c000000"
	        	     />
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="0dp"
		        	android:layout_weight="1"
		        	android:layout_marginTop="3dp"
		        	android:layout_marginLeft="1dp"
		        	android:layout_marginRight="1dp"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="新密码"
		        		android:textSize="15dp"
		        		android:gravity="center_vertical"
		        		android:textColor="#666666"
	        	        />
	        	    <EditText 
	        	        android:id="@+id/id_new_password"
	        	         android:layout_width="0dp"
		        		 android:layout_height="match_parent"
		        		 android:layout_weight="3"
		        		 android:hint="请输入新密码"
		        		 android:digits="@string/edit_input"
		        		 android:gravity="center_vertical"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:background="@drawable/item_shape_focus_no_corner"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	        	 <ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:layout_marginTop="2dp"
		        	 android:background="#0c000000"
	        	     />
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="0dp"
		        	android:layout_weight="1"
		        	android:orientation="horizontal"
		        	android:layout_marginTop="3dp"
		        	android:layout_marginLeft="1dp"
		        	android:layout_marginRight="1dp"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="确认密码"
		        		android:textSize="15dp"
		        		android:gravity="center_vertical"
		        		android:textColor="#666666"
	        	        />
	        	   
	        	    <EditText 
	        	        android:id="@+id/id_new_password_confirml"
	        	         android:layout_width="0dp"
		        		 android:layout_height="match_parent"
		        		 android:layout_weight="3"
		        		 android:hint="请再次输入新密码"
		        		 android:gravity="center_vertical"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:background="@drawable/item_shape_focus_no_corner"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	         </LinearLayout>
             
	         
             <Button 
                 android:id="@+id/id_modify_password_confirm"
				android:layout_width="match_parent"
		         android:layout_height="45dp"
		         android:layout_marginLeft="30dp"
		         android:layout_marginRight="30dp"
		         android:layout_marginTop="30dp"
		         android:layout_marginBottom="20dp"
		         android:text="确		定"
		         android:textColor="#ffffff"
		         android:textSize="18dp"
		         android:gravity="center"
		         android:background="@drawable/button_background"
                 />
	       </LinearLayout>
	       
     </ScrollView>

    <include
        android:id="@+id/id_data_loading"
        layout="@layout/layout_loading_dialog"
       />
	       
</FrameLayout>
