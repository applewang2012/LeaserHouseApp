<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent" 
    android:layout_height="70dp"
    android:orientation="vertical"
    android:paddingRight="25dp"
    android:paddingBottom="5dp"
    android:textColor="#ffffff"
    android:paddingLeft="25dp">
    <TextView 
        android:id="@+id/id_house_address"
        android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:singleLine="true"
    	android:textColor="#afaeae"
    	android:textSize="13dp"
    	android:text="天津市和平区瞰和平16号楼1-202"
    	android:gravity="left|center_vertical"
        />
	<LinearLayout 
	    android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_marginTop="8dp"
    	android:orientation="horizontal"
	    >
	    <TextView 
	        android:id="@+id/id_house_type"
	        android:layout_width="0dp" 
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	    	android:singleLine="true"
	    	android:textColor="#666666"
	    	android:textSize="15dp"
	    	android:text="两室"
	    	android:gravity="left|center_vertical"
	        />
	    <TextView 
	        android:id="@+id/id_house_direction"
	        android:layout_width="0dp" 
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	    	android:singleLine="true"
	    	android:textColor="#666666"
	    	android:textSize="15dp"
	    	android:text="东西向"
	    	android:gravity="left|center_vertical"
	        />
	    <TextView 
	        android:id="@+id/id_house_floor"
	        android:layout_width="0dp" 
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	    	android:singleLine="true"
	    	android:textColor="#666666"
	    	android:textSize="15dp"
	    	android:text="18/30层"
	    	android:gravity="left|center_vertical"
	        />
	    <TextView 
	        android:id="@+id/id_house_status"
	        android:layout_width="0dp" 
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	    	android:singleLine="true"
	    	android:textColor="#666666"
	    	android:textSize="15dp"
	    	android:text="未租"
	    	android:gravity="right|center_vertical"
	        />
	</LinearLayout>
</LinearLayout>