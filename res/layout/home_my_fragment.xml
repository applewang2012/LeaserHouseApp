<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
     <ScrollView 
         android:layout_width="match_parent"
    	 android:layout_height="match_parent"
         >
         <FrameLayout 
             android:id="@+id/id_userinfo_container"
             android:layout_width="match_parent"
    		 android:layout_height="match_parent"
             >
             <LinearLayout 
		    android:layout_width="match_parent"
	    	android:layout_height="100dp"
	    	android:orientation="horizontal"
	    	android:background="#e5ffffff"
		    >
		    <ImageView 
		        android:layout_width="80dp"
	    		android:layout_height="80dp"
	    		android:background="@drawable/loginuser"
	    		android:layout_marginLeft="8dp"
	    		android:layout_gravity="center_vertical"
		        />
	    <LinearLayout 
	    	android:layout_width="match_parent"
	    	android:layout_height="100dp"
	    	android:orientation="vertical"
	    	android:layout_marginLeft="10dp"
		    >
		    <TextView 
		        android:id="@+id/id_user_nickname"
		        android:layout_width="wrap_content"
		    	android:layout_height="35dp"
		    	android:text="昵称"
		    	android:textColor="#000000"
		    	android:textSize="21sp"
		    	android:gravity="center"
		        />
		    <TextView 
		        android:id="@+id/id_user_id"
		        android:layout_width="wrap_content"
		    	android:layout_height="35dp"
		    	android:text="用户id"
		    	android:textColor="#66000000"
		    	android:textSize="18sp"
		    	android:gravity="center"
		        />
		    <TextView 
		        android:id="@+id/id_user_address"
		        android:layout_width="wrap_content"
		    	android:layout_height="35dp"
		    	android:text="地址："
		    	android:textColor="#66000000"
		    	android:textSize="18sp"
		    	android:gravity="center"
		        />
	    </LinearLayout>
	</LinearLayout>
    
	 <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="109dp"
		        android:layout_marginTop="110dp"
		        android:layout_marginLeft="2dp"
		        android:layout_marginRight="2dp"
		        android:background="#e5ffffff"
		        android:orientation="vertical"
	        	>
	        	<FrameLayout 
	        	    android:id="@+id/id_user_house_publish"
	        	    android:layout_width="match_parent"
		        	android:layout_height="49dp"
		        	android:orientation="horizontal"
		        	android:layout_marginTop="5dp"
		        	android:layout_marginLeft="10dp"
		        	android:layout_marginRight="10dp"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="wrap_content"
		        		android:layout_height="match_parent"
		        		android:layout_weight="2"
		        		android:text="发布房屋"
		        		android:textSize="18sp"
		        		android:gravity="center_vertical"
		        		android:textColor="#000000"
	        	        />
	        	    <ImageView 
	        	        android:layout_width="20dp"
		        		android:layout_height="20dp"
		        		android:background="@drawable/into_icon"
		        		android:layout_gravity="right"
	        	        />
	        	</FrameLayout>
	        	 <ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:background="#0c000000"
	        	     />
	        	<FrameLayout 
	        	    android:id="@+id/id_user_house_delete"
	        	    android:layout_width="match_parent"
		        	android:layout_height="49dp"
		        	android:layout_marginTop="5dp"
		        	android:layout_marginBottom="5dp"
		        	android:layout_marginLeft="10dp"
		        	android:layout_marginRight="10dp"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="wrap_content"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="删除房屋"
		        		android:textSize="18sp"
		        		android:textColor="#000000"
	        	        />
	        	    <ImageView 
	        	        android:layout_width="20dp"
		        		android:layout_height="20dp"
		        		android:background="@drawable/into_icon"
		        		android:layout_gravity="right"
	        	        />
	        	</FrameLayout>
	         </LinearLayout>
	         
	 <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="109dp"
		        android:layout_marginTop="220dp"
		        android:layout_marginLeft="2dp"
		        android:layout_marginRight="2dp"
		        android:background="#e5ffffff"
		        android:orientation="vertical"
	        	>
	        	<FrameLayout 
	        	    android:id="@+id/id_userinfo_password_modify"
	        	    android:layout_width="match_parent"
		        	android:layout_height="49dp"
		        	android:orientation="horizontal"
		        	android:layout_marginTop="5dp"
		        	android:layout_marginLeft="10dp"
		        	android:layout_marginRight="10dp"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="wrap_content"
		        		android:layout_height="match_parent"
		        		android:layout_weight="2"
		        		android:text="修改密码"
		        		android:textSize="18sp"
		        		android:gravity="center_vertical"
		        		android:textColor="#000000"
	        	        />
	        	    <ImageView 
	        	        android:layout_width="20dp"
		        		android:layout_height="20dp"
		        		android:background="@drawable/into_icon"
		        		android:layout_gravity="right"
	        	        />
	        	</FrameLayout>
	        	 <ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:background="#0c000000"
	        	     />
	        	<FrameLayout 
	        	    android:id="@+id/id_userinfo_logout"
	        	    android:layout_width="match_parent"
		        	android:layout_height="49dp"
		        	android:layout_marginTop="5dp"
		        	android:layout_marginBottom="5dp"
		        	android:layout_marginLeft="10dp"
		        	android:layout_marginRight="10dp"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="wrap_content"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="退出登陆"
		        		android:textSize="18sp"
		        		android:textColor="#000000"
	        	        />
	        	    <ImageView 
	        	        android:layout_width="20dp"
		        		android:layout_height="20dp"
		        		android:background="@drawable/into_icon"
		        		android:layout_gravity="right"
	        	        />
	        	</FrameLayout>
	         </LinearLayout>
         </FrameLayout>
         
     </ScrollView>
	
	
	<include
        android:id="@+id/id_data_loading"
        android:visibility="invisible"
        layout="@layout/layout_loading_dialog"
       />  
</FrameLayout>
