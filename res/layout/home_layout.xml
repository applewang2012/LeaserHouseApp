<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccffffff"
    android:orientation="vertical"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
     >
     
    <FrameLayout
		android:id="@+id/id_home_content"
		android:layout_width="match_parent"
		android:layout_height="match_parent" 
		android:paddingBottom="85dp"
		android:persistentDrawingCache="animation"
		/>
    <LinearLayout
           android:id="@+id/id_home_button_container"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="bottom"
           android:background="#21000000"
           android:orientation="horizontal"
           >
           <LinearLayout 
               android:id="@+id/id_home_button_house"
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:orientation="vertical"
	           android:clickable="true"
	           android:gravity="center_horizontal"
               >
               <ImageView
                   android:layout_width="60dp"
	           	   android:layout_height="60dp"
	           	   android:background="@drawable/chuzu"
	           	   
                   />
               <TextView 
                   android:layout_width="match_parent"
	           	   android:layout_height="wrap_content"
	           	   android:textColor="#000000"
	           	   android:textSize="15dp"
	           	   android:text="出租屋"
	           	   android:gravity="center_horizontal"
                   />
           </LinearLayout>
           <ImageView 
	        	    android:layout_width="1dp"
		        	android:layout_height="60dp"
		        	android:background="#3f000000"
		        	android:layout_gravity="center_vertical"
	        	     />
          <LinearLayout 
               android:id="@+id/id_home_button_my"
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:orientation="vertical"
	           android:clickable="true"
	           android:gravity="center_horizontal"
	           android:alpha="0.5"
               >
               <ImageView
                   android:layout_width="60dp"
	           	   android:layout_height="60dp"
	           	   android:background="@drawable/headd"
                   />
               <TextView 
                   android:layout_width="match_parent"
	           	   android:layout_height="wrap_content"
	           	   android:textColor="#000000"
	           	   android:textSize="15sp"
	           	   android:text="我的"
	           	   android:gravity="center_horizontal"
                   />
           </LinearLayout>
   </LinearLayout>
   
	  
</FrameLayout>
