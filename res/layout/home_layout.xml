<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
     >
     
    <FrameLayout
		android:id="@+id/id_home_content"
		android:layout_width="match_parent"
		android:layout_height="match_parent" 
		android:paddingBottom="60dp"
		android:persistentDrawingCache="animation"
		/>
    <LinearLayout
           android:id="@+id/id_home_button_container"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="bottom"
           android:background="#f1f5fc"
           android:orientation="horizontal"
           >
           <LinearLayout 
               android:id="@+id/id_home_button_house"
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:orientation="vertical"
	           android:clickable="true"
	           android:gravity="center_horizontal"
               >
               <ImageView
                   android:id="@+id/id_home_button_house_icon"
                   android:layout_width="38dp"
	           	   android:layout_height="38dp"
	           	   android:layout_marginTop="3dp"
	           	   android:background="@drawable/chuzu_icon"
	           	   
                   />
               <TextView 
                   android:id="@+id/id_home_button_house_text"
                   android:layout_width="match_parent"
	           	   android:layout_height="wrap_content"
	           	   android:textColor="#0b6cfe"
	           	   android:textSize="12dp"
	           	   android:text="出租屋"
	           	   android:gravity="center_horizontal"
                   />
           </LinearLayout>
           <ImageView 
	        	    android:layout_width="1dp"
		        	android:layout_height="30dp"
		        	android:background="#3f000000"
		        	android:layout_gravity="center_vertical"
	        	     />
          <LinearLayout 
               android:id="@+id/id_home_button_my"
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:orientation="vertical"
	           android:clickable="true"
	           android:gravity="center_horizontal"
               >
               <ImageView
                   android:id="@+id/id_home_button_my_icon"
                   android:layout_width="38dp"
	           	   android:layout_height="38dp"
	           	   android:layout_marginTop="3dp"
	           	   android:background="@drawable/my_icon_default"
                   />
               <TextView 
                   android:id="@+id/id_home_button_my_text"
                   android:layout_width="match_parent"
	           	   android:layout_height="wrap_content"
	           	   android:textColor="#afaeae"
	           	   android:textSize="14dp"
	           	   android:text="我的"
	           	   android:gravity="center_horizontal"
                   />
           </LinearLayout>
   </LinearLayout>
   
	  
</FrameLayout>
