<?xml version="1.0" encoding="UTF-8"?>   
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >  
        <shape>  
            <gradient  
                android:startColor="#2828FF"  
                android:endColor="#2828FF"  
                android:angle="270" />  
            <stroke  
                android:width="2dp"  
                android:color="#55000000" />  
            <corners  
                android:radius="8dp" />  
            <padding  
                android:left="10dp"  
                android:top="10dp"  
                android:right="10dp"  
                android:bottom="10dp" />  
        </shape>  
    </item>  
  
    <item android:state_focused="true" >  
        <shape>  
            <gradient  
                android:startColor="#ff9d77"  
                android:endColor="#ff9d77"  
                android:angle="270" />  
            <stroke  
                android:width="2dp"  
                android:color="#55000000" />  
            <corners  
                android:radius="2dp" />  
            <padding  
                android:left="10dp"  
                android:top="10dp"  
                android:right="10dp"  
                android:bottom="10dp" />  
        </shape>  
    </item>  
  
    <item>          
        <shape>  
            <gradient  
                android:startColor="#0b6cff"  
                android:endColor="#0b6cff"  
                android:angle="270" />  
            <stroke  
                android:width="2dp"  
                android:color="#55000000" />  
            <corners  
                android:radius="8dp" />  
            <padding  
                android:left="10dp"  
                android:top="10dp"  
                android:right="10dp"  
                android:bottom="10dp" />  
        </shape>  
    </item>  

</selector>